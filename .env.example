# ========== PostgreSQL Source ==========
POSTGRES_SOURCE_HOST=localhost
POSTGRES_SOURCE_PORT=5433
POSTGRES_SOURCE_DB=source_db
POSTGRES_SOURCE_USER=source_user
POSTGRES_SOURCE_PASSWORD=source_password123

# ========== PostgreSQL Analytics ==========
POSTGRES_ANALYTICS_HOST=localhost
POSTGRES_ANALYTICS_PORT=5434
POSTGRES_ANALYTICS_DB=analytics_db
POSTGRES_ANALYTICS_USER=analytics_user
POSTGRES_ANALYTICS_PASSWORD=analytics_password123

# ========== PostgreSQL DWH ==========
POSTGRES_DWH_HOST=localhost
POSTGRES_DWH_PORT=5435
POSTGRES_DWH_DB=dwh_db
POSTGRES_DWH_USER=dwh_user
POSTGRES_DWH_PASSWORD=dwh_password123

# ========== MongoDB ==========
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=source_mongo_db
MONGO_USER=mongo_user
MONGO_PASSWORD=mongo_password123

# ========== PgAdmin ==========
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# ========== Airflow ==========
AIRFLOW_UID=50000
AIRFLOW_GID=0

airflow.cfg
[core]
dags_folder = /opt/airflow/dags
load_examples = False
executor = LocalExecutor
default_timezone = utc
fernet_key = your_fernet_key_here_change_this_in_production

[database]
sql_alchemy_conn = postgresql+psycopg2://airflow_user:airflow_password@postgres-airflow:5432/airflow_db
load_default_connections = False

[logging]
logging_level = INFO
remote_logging = False

[webserver]
base_url = http://localhost:8080
web_server_port = 8080
default_ui_timezone = UTC
workers = 4
worker_refresh_interval = 1800
secret_key = your_secret_key_here

[scheduler]
min_file_process_interval = 10
dag_dir_list_interval = 10